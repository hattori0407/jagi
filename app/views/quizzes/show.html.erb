<% if @prev_answer_user_profile %>
  <div id="quiz_result">
    <%= image_tag flash[:image_url] if flash[:image_url].present? %>
    <%= content_tag :li, @prev_answer_user_profile.name if @prev_answer_user_profile.name.present? %>
    <%= content_tag :li, @prev_answer_user_profile.answer_name if @prev_answer_user_profile.answer_name.present? %>
    <%= content_tag :li, "#{@prev_answer_user_profile.joined_year}#{I18n.t('quiz.show.year')}" if @prev_answer_user_profile.joined_year.present? %>
    <%= content_tag :li, @prev_answer_user_profile.group if @prev_answer_user_profile.group.present? %>
    <%= content_tag :li, @prev_answer_user_profile.project if @prev_answer_user_prprojectr_name.present? %>
    <%= content_tag :li, @prev_answer_user_profile.detail if @prev_answer_usedetailnswer_name.present? %>
  </div>
<% end %>

<% if @answer_user_profile %>
  <div id="user_image">
    <% if @profile_image_normal %>
      <%= image_tag @profile_image_normal.image.url %>
    <% else %>
      <div>
        <%= I18n.t('quiz.show.answer_user_not_found') %>
      </div>
    <% end %>
  </div>

  <div>
    <%= I18n.t('quiz.show.who') %>
  </div>
  <%= form_tag answer_quiz_path do |f| %>
    <%= hidden_field_tag :answer_user_id, @answer_user_profile.id %>
    <%= label_tag :answer_user_name, I18n.t('quiz.show.answer') %>
    <%= text_field_tag :answer_user_name, nil, autofocus: true, required: true %>
    <%= hidden_field_tag :joined_year, params[:joined_year] %>
    <%= hidden_field_tag :project_id, params[:project_id] %>
    <%= hidden_field_tag :group_id, params[:group_id] %>
    <%= submit_tag :answer %>
  <% end %>

  <div id="answer_results">
    <span id="total_correct">
      <%= I18n.t('quiz.show.correct') %>: <%= @total_correct %>
    </span>
    <span id="total_incorrect">
      <%= I18n.t('quiz.show.incorrect') %>: <%= @total_incorrect %>
    </span>
  </div>
<% end %>

<%= render partial: "page/start_quiz" %>
